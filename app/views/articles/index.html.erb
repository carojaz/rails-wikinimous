<div class="container">
  <% if flash[:notice] %>
    <div class="alert-success"><%= flash[:notice] %></div>
  <% end %>
  <ul class="list-group">
      <% @articles.each do |article| %>
      <li class="list-group-item">
          <p><%= link_to article.title, article_path(article) %></p>
          <p><%= article.content %></p>
      </li>
      <% end %>
    </ul>
  </section>
  <section>
  <%= link_to "Create a new article", new_article_path, class: "btn btn-info" %>
  </section>
</div>
